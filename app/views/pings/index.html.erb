<h1>Listing pings</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Icon</th>
  </tr>

<% @pings.each do |ping| %>
  <tr>
    <td><%=h ping.text %></td>
    <td><%=h ping.icon %></td>
    <td><%= link_to 'Show', ping %></td>
    <td><%= link_to 'Edit', edit_ping_path(ping) %></td>
    <td><%= link_to 'Destroy', ping, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ping', new_ping_path %>